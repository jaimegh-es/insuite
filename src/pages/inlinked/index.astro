---
import Sidebar from "../../components/sidebar.astro";
import Layout from "../../layouts/LayoutEditors.astro";
import Editor from "../../components/inlinked/Editor.astro";
import { ExternalLink } from 'lucide-astro';
---

<Layout
  title="Inlinked | Formateador de texto para LinkedIN"
  description="Formatea texto para LinkedIN con IA"
>
  <div class="app-container">
    <Sidebar />
    
    <main class="main-content">
      <header class="top-bar">
         <div class="brand">
             <h1>Inlinked</h1>
         </div>
         <a href="https://edge.inled.es" target="_blank" class="ai-link" title="Ir a Inled AI">
             <img src="https://hosted.inled.es/inledai.png" alt="Inled AI" />
             <span class="ai-text">Inled AI</span>
             <ExternalLink class="icon-sm" />
         </a>
      </header>
      
      <div class="content-wrapper">
          <Editor />
      </div>

      <footer class="footer">
        <p>Inled Group 2026. Licenciado bajo GNU GPLv3.0</p>
      </footer>
    </main>
  </div>
</Layout>

<style>
  html, body {
      height: 100%;
      margin: 0;
      background-color: #f6f8fa; /* Shadcn-like background */
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }

  .app-container {
    display: flex;
    min-height: 100vh;
  }

  .main-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    min-width: 0; /* Important for flex child to shrink properly */
    overflow-x: hidden;
  }

  .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      background: white;
      border-bottom: 1px solid #e2e8f0;
  }
  
  .brand h1 {
      margin: 0;
      font-size: 1.5rem;
      font-weight: 700;
      color: #0f172a; /* Slate 900 */
      letter-spacing: -0.025em;
  }
  
  .ai-link {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      text-decoration: none;
      color: #475569; /* Slate 600 */
      padding: 0.5rem 1rem;
      border-radius: 9999px;
      background: #f1f5f9;
      transition: all 0.2s;
      font-weight: 500;
      font-size: 0.875rem;
  }
  
  .ai-link:hover {
      background: #e2e8f0;
      color: #0f172a;
  }
  
  .ai-link img {
      width: 20px;
      height: 20px;
      border-radius: 4px;
  }
  
  .content-wrapper {
      flex: 1;
      padding: 2rem;
      display: flex;
      flex-direction: column;
      max-width: 1000px;
      margin: 0 auto;
      width: 100%;
      box-sizing: border-box;
  }
  
  .footer {
      padding: 1.5rem;
      text-align: center;
      color: #94a3b8;
      font-size: 0.875rem;
      border-top: 1px solid #e2e8f0;
      background: white;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .app-container {
        flex-direction: column; /* Move sidebar to bottom or hidden via CSS in sidebar component */
    }
    
    .top-bar {
        padding: 1rem;
    }
    
    .content-wrapper {
        padding: 1rem;
    }
    
    .ai-text {
        display: none;
    }
  }
</style>
